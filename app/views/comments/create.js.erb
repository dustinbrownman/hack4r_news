<% if @comment.commentable.is_a?(Post) %>
	$('#new_comment').remove();
	$('#new_comment_link').show();
	$('div#comment-section').append('<%= j render @comment %>');
<% else %>
	$('#new_comment').remove();
	$('.reply-link').show();
	$('div#comment<%= @comment.commentable_id %>').append('<%= j render @comment %>');
<% end %>
