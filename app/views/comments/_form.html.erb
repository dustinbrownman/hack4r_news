

  <%= form_for @comment, remote: true do |f| %>
    <%= f.hidden_field :commentable_id %>
    <%= f.hidden_field :commentable_type %>
    <%= f.label "Enter your text here" %>
    <%= f.text_area :content, :class => 'form-control' %>
    <%= f.submit "Submit", :class => 'btn btn-primary' %>
  <% end %>